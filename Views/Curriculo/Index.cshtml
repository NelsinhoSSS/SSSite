@{
    ViewData["Title"] = "CURRÍCULO";
    var pdfUrl = ViewBag.CaminhoPdf;
}

<style>
    /* Container ajustado para o topo */
    .cv-main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start; /* Alinha ao topo */
        min-height: 100vh;
        background-color: #0b0b0b;
        /* Reduzimos o padding superior para subir o arquivo */
        padding: 10px 40px 40px 40px;
    }

    .cv-frame {
        width: 100%;
        max-width: 1200px;
        /* Ocupa quase toda a altura disponível após o menu */
        height: 88vh;
        margin-top: 5px; /* Espaço mínimo em relação ao menu superior */
        border: 2px solid #333;
        border-radius: 12px;
        box-shadow: 0 0 30px rgba(0, 255, 65, 0.15);
        background-color: #1a1a1a;
    }

    /* Ajuste fino para telas menores */
    @@media (max-width: 768px) {
        .cv-main-container {
            padding: 5px 15px;
        }

        .cv-frame {
            height: 80vh;
            margin-top: 0;
        }
    }
</style>

<div class="cv-main-container">
    <iframe src="@pdfUrl#toolbar=0" class="cv-frame">
        <p>
            Seu navegador não suporta a visualização de PDFs.
            <a href="@pdfUrl">Clique aqui para baixar.</a>
        </p>
    </iframe>
</div>