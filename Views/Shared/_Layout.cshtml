<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SSSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* CSS GLOBAL E RESET DE SCROLL */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #0a0a0c;
            color: white;
            overflow: hidden; /* Trava o scroll global */
        }

        .navbar-brand-custom {
            color: #bc6ff1 !important;
            font-weight: bold;
            letter-spacing: 2px;
            text-shadow: 0 0 10px rgba(188, 111, 241, 0.5);
            text-decoration: none;
            font-size: 1.5rem;
        }

        .main-wrapper {
            height: calc(100vh - 56px);
            width: 100%;
            position: relative;
        }

        /* ESTILO DO BOTÃO MISTERIOSO */
        .btn-mystery {
            font-family: 'Courier New', Courier, monospace;
            color: #333 !important;
            transition: 0.5s all ease;
            cursor: help;
        }

            /* CLASSE ADICIONADA PELO adm.js */
            .btn-mystery.adm-active {
                color: #00ff41 !important;
                text-shadow: 0 0 10px #00ff41, 0 0 20px #00ff41;
                font-weight: bold;
                transform: scale(1.1);
            }

        .dropdown-menu-dark {
            background-color: #15151e;
            border: 1px solid #3d2b56;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom" style="background-color: #0a0a0c; border-color: #3d2b56 !important;">
            <div class="container-fluid">
                <a class="navbar-brand-custom" asp-controller="Home" asp-action="Index">SSSite</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" data-bs-toggle="dropdown">Jogos</a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="Jogos" asp-action="GalaxyDefender">Galaxy Defender</a></li>
                                <li><a class="dropdown-item" asp-controller="Jogos" asp-action="ShuffleCups">Shuffle Cups</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-light" href="#" data-bs-toggle="dropdown">Charts</a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li><a class="dropdown-item" asp-controller="Charts" asp-action="Pizza">Pizza</a></li>
                                <li><a class="dropdown-item" asp-controller="Charts" asp-action="Column">Column</a></li>
                            </ul>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a id="mysteryBtn" class="nav-link btn-mystery" href="javascript:void(0)" onclick="openSecretModal()">???</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-wrapper">
        <main role="main" style="height: 100%;">
            @RenderBody()
        </main>
    </div>

    <partial name="AdmMode" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="~/js/adm.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>