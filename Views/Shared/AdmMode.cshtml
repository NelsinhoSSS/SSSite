<style>
    .secret-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.95);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .secret-box {
        background: #0a0a0c;
        border: 2px solid #00ff41; 
        padding: 40px;
        border-radius: 15px;
        text-align: center;
        box-shadow: 0 0 50px rgba(0, 255, 65, 0.2);
        max-width: 400px;
        width: 90%;
    }

        .secret-box h3 {
            color: #00ff41;
            margin-bottom: 20px;
            font-family: monospace;
        }

        .secret-box input {
            background: #15151e;
            border: 1px solid #3d2b56;
            color: #00ff41;
            padding: 12px;
            margin-bottom: 25px;
            text-align: center;
            width: 100%;
            border-radius: 8px;
            outline: none;
        }

    .btn-unlock {
        background: #00ff41;
        border: none;
        padding: 10px 25px;
        color: #000;
        cursor: pointer;
        border-radius: 5px;
        font-weight: bold;
    }

    .btn-close-secret {
        background: transparent;
        border: 1px solid #444;
        color: #888;
        padding: 10px 20px;
        margin-left: 10px;
        cursor: pointer;
        border-radius: 5px;
    }
</style>

<div id="secretModal" class="secret-overlay">
    <div class="secret-box">
        <h3>SYSTEM_ACCESS</h3>
        <p style="color: #666;">Password Required:</p>
        <input type="password" id="secretPass" placeholder="">
        <div class="secret-actions">
            <button onclick="checkSecret()" class="btn-unlock">CONFIRM</button>
            <button onclick="closeSecretModal()" class="btn-close-secret">CANCEL</button>
        </div>
        <p id="secretError" style="color: #ff0055; margin-top: 15px; display: none; font-size: 0.8rem;">[ ACCESS_DENIED ]</p>
    </div>
</div>